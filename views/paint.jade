doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Test
        script(type='text/javascript', src='../javascripts/canvas.js')
        script(type='text/javascript', src='../javascripts/draw_tool.js')
        script(type='text/javascript', src='../javascripts/fabric.js')
        script(type='text/javascript', src='../javascripts/AutoCanny.js')
        script(type='text/javascript', src='../javascripts/OtsuThreshold.js')
        script(type='text/javascript', src='../javascripts/balloon.js')
    body(style='background: #CDBB99')
        div(style='background: white; width: 500px; margin: 10px; float: left')
            canvas#c(width='500px', height='500px', style='border: 1px solid gold; ')
        div(style='width: 270px; float: left; margin: 10px; font-size: 14px; line-height: 1.5; color: #333; text-align: left')
            div(style='width: 100%; padding: 10px; border-radius: 5px; background-color: #FBCEB1 ')
                #func(style='padding-bottom: 5px;')
                    button#clear-canvas.btn.btn-info(style='margin: 0 auto;') Clear
                    input#image_up_file(type='file', style='display: none;', accept='image/*', onchange='Image_Load(this)')
                    button#load-object.btn.btn-info(style='margin: 0 auto;') Load
                    button#delete-object.btn.btn-info(style='margin: 0 auto;') Delete
                    button#undo-canvas.btn.btn-info(style='margin: 0 auto;') Undo
                    button#redo-canvas.btn.btn-info(style='margin: 0 auto;') Redo
                    button#Color-object.btn.btn-info(style='margin: 0 auto;') Auto Color
                    button#edge-object.btn.btn-info(style='margin: 0 auto;') Edge
                    button#balloon-object.btn.btn-info(style='margin: 0 auto;') balloon
                    button#save-canvas.btn.btn-info(style='margin: 0 auto;') Save
                button#drawing-mode.btn.btn-info Cancel drawing mode
                br
                #drawing-mode-options(style='margin: 10px;')
                    label(for='drawing-mode-selector') Mode:
                    select#drawing-mode-selector
                        option Pencil
                        option Circle
                        option Spray
                        option Pattern
                        option hline
                        option vline
                        option square
                        option diamond
                    br
                    label(for='drawing-line-width') Line width:
                    span.info 30
                    input#drawing-line-width(type='range', value='30', min='0', max='150')
                    br
                    label(for='drawing-color') Line color:
                    input#drawing-color(type='color', value='#005E7A')
                    br
                    label(for='drawing-shadow-color') Shadow color:
                    input#drawing-shadow-color(type='color', value='#005E7A')
                    br
                    label(for='drawing-shadow-width') Shadow width:
                    span.info 0
                    input#drawing-shadow-width(type='range', value='0', min='0', max='50')
                    br
                    label(for='drawing-shadow-offset') Shadow offset:
                    span.info 0
                    input#drawing-shadow-offset(type='range', value='0', min='0', max='50')
                    br
            div(style='width: 100%; height: 250px; overflow: auto; padding: 10px; border-radius: 5px; margin-top: 10px; background-color: #FBCEB1; position: relative')
                div(style='height: 20px')
                    #add-layer(style='border-radius: 5px; background: blue; width: 20px; height: 20px; float: left;')
                    #merge-layer-objects(style='border-radius: 5px; background: red; width: 20px; height: 20px; float: right;')
                #layer-objects(style='text-align: center;')
        #canvas-box(style='float: right; background: white; ')